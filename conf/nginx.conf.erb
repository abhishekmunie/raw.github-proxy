# Set another default user than root for security reasons
user       www www;

worker_processes 4;
daemon off;

worker_rlimit_nofile 8192;

events {
  worker_connections  8000;
}

http {
  include       mime.types;

  keepalive_timeout 20;

  tcp_nopush on; # off may be better for Comet/long-poll stuff
  tcp_nodelay off; # on may be better for Comet/long-poll stuff

  proxy_http_version 1.1;
  proxy_hide_header Content-Type;
  proxy_hide_header Content-Disposition;
  proxy_hide_header X-Runtime;
  proxy_hide_header Cache-Control;
  proxy_hide_header Content-Transfer-Encoding;
  proxy_hide_header X-Ratelimit-Limit;
  proxy_hide_header X-RateLimit-Remaining;
  proxy_hide_header X-Frame-Options;
  add_header Cache-Control "public";

  server {
    listen <%= ENV['PORT'] %>;

    server_name js-raw.abhishekmunie.com;

    charset utf-8;

    location / {
        proxy_pass https://raw.github.com:443/mySite/mySite-js/master/;
        proxy_redirect off;
        add_header Content-Type application/javascript;
    }
  }

  server {
    listen <%= ENV['PORT'] %>;

    server_name github-raw.abhishekmunie.com github-raw-proxy.herokuapp.com;

    sendfile on;
    root html;
    
    charset utf-8;
    default_type  text/html;

    location = / {
      try_files $uri @proxy;
      add_header Content-Type text/html;
    }

    location / {
      try_files $uri @proxy;
      add_header Content-Type $content_type;
    }

    location ~* \.(?:htm|html|shtml)$ {
      try_files $uri @proxy;
      add_header Content-Type text/html;
    }

    location ~* \.(?:css)$ {
      try_files $uri @proxy;
      add_header Content-Type text/css;
    }

    location ~* \.(?:js)$ {
      try_files $uri @proxy;
      add_header Content-Type application/x-javascript;
    }

    location ~* \.(?:gif)$ {
      try_files $uri @proxy;
      add_header Content-Type image/gif;
    }

    location ~* \.(?:jpeg|jpg)$ {
      try_files $uri @proxy;
      add_header Content-Type image/jpeg;
    }

    location ~* \.(?:png)$ {
      try_files $uri @proxy;
      add_header Content-Type image/png;
    }

    location ~* \.(?:ico)$ {
      try_files $uri @proxy;
      add_header Content-Type image/x-icon;
    }

    location ~* \.(?:pdf)$ {
      try_files $uri @proxy;
      add_header Content-Type application/pdf;
    }

    location ~* \.(?:rss)$ {
      try_files $uri @proxy;
      add_header Content-Type application/rss+xml;
    }

    location @proxy {
        proxy_pass https://raw.github.com;
        proxy_redirect off;
    }
  }
}
