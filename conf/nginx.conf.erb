# Set another default user than root for security reasons
user       www www;

worker_processes 4;
daemon off;

worker_rlimit_nofile 8192;

events {
  worker_connections  8000;
}

http {
  include       mime.types;

  default_type  application/octet-stream;

  keepalive_timeout 20;

  tcp_nopush on; # off may be better for Comet/long-poll stuff
  tcp_nodelay off; # on may be better for Comet/long-poll stuff

  proxy_http_version 1.1;
  proxy_hide_header Content-Type;
  proxy_hide_header Content-Disposition;
  proxy_hide_header X-Runtime;
  proxy_hide_header Cache-Control;
  proxy_hide_header Content-Transfer-Encoding;
  proxy_hide_header X-Ratelimit-Limit;
  proxy_hide_header X-RateLimit-Remaining;
  proxy_hide_header X-Frame-Options;
  add_header Cache-Control "public";
  # opt-in to the future
  add_header "X-UA-Compatible" "IE=Edge,chrome=1";

  server {
    listen <%= ENV['PORT'] %>;

    server_name js-raw.abhishekmunie.com;

    charset utf-8;

    location / {
        proxy_pass https://raw.github.com:443/mySite/mySite-js/master/;
        proxy_redirect off;
        add_header Content-Type application/javascript;
    }
  }

  server {
    listen <%= ENV['PORT'] %>;

    server_name      localhost;

    charset utf-8;

    location / {
        proxy_pass https://raw.github.com:443/;
        proxy_redirect off;

    }
  }
}
